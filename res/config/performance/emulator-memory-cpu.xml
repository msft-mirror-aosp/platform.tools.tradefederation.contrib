<configuration description="Testing the app launch performance" >

    <option
        name="test-tag"
        value="EmulatorMemoryCpuTest" />

    <option name="new-emulator" value="true" />

    <object type="emulator_launcher" class="com.android.tradefed.targetprep.LocalEmulatorLaunch" />

    <test class="com.android.performance.tests.EmulatorInstrumentationPerfTest">
        <option name="test-apk-name" value="CtsFragmentTestCases.apk" />
        <option name="emulator-metrics-key" value="emulator_memory_cpu" />
    </test>

    <object type="delegate_test" class="com.android.tradefed.testtype.AndroidJUnitTest" >
        <option
            name="window-animation"
            value="false" />
        <option
            name="rerun"
            value="false" />
        <!-- disable timeout to stop having a separate thread per test method -->
        <option
            name="test-timeout"
            value="0" />
        <option
            name="runner"
            value="androidx.test.runner.AndroidJUnitRunner" />
    </object>

</configuration>
